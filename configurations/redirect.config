server {
	listen 8080;
	autoindex on;
	host 0.0.0.0;
	root ./resources/;
	client_max_body_size 70M;
	
	allowedMethods GET;
	location_ends py {
		cgi_path /usr/bin/python3;
	}

	location / {
		autoindex on;
		allowedMethods GET|POST;
		index index.html;
	}

    location /hello/ {
        allowedMethods GET;
        redirect www.youtube.com;
    }
}

server {
	listen 8081;
	server_name _;
	host 127.0.0.1;
    root ./resources/;

	allowedMethods GET|POST;
	client_max_body_size 70M;

	error_page 404 resources/miaou.png;

	location / {
		autoindex on;
		allowedMethods GET;
		index index.html;
	}
}
